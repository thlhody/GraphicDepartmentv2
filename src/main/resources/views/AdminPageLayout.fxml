<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane prefWidth="1280" prefHeight="720"
            stylesheets="@../css/page-style.css, @../css/header-style.css"
            xmlns="http://javafx.com/javafx/8"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="ctgraphdep.controllers.AdminController">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <top>
        <HBox alignment="CENTER" spacing="20" styleClass="header">
            <HBox alignment="CENTER_LEFT" HBox.hgrow="ALWAYS">
                <ImageView fx:id="logoImage" fitWidth="150" fitHeight="70" preserveRatio="true"/>
                <Label text="Admin Dashboard" styleClass="header-text"/>
            </HBox>
            <HBox alignment="CENTER_RIGHT">
                <Label fx:id="welcomeLabel" styleClass="welcome-label"/>
                <Button fx:id="logoutButton" text="Logout" onAction="#onLogoutButton" styleClass="header-button"/>
            </HBox>
        </HBox>
    </top>

    <center>
        <VBox alignment="TOP_CENTER" spacing="20">
            <VBox alignment="CENTER" spacing="15" styleClass="content">
                <Label text="Welcome to the Admin Dashboard" styleClass="title-text"/>
                <Label text="Use the quick actions below to manage users, view work intervals, or adjust settings." styleClass="subtitle-text"/>
                <HBox alignment="CENTER" spacing="20">
                    <Button text="Manage Users" onAction="#onStatusButton" styleClass="dashboard-button"/>
                    <Button text="View Work Intervals" onAction="#onWorkIntervalButton" styleClass="dashboard-button"/>
                    <Button text="Adjust Settings" onAction="#onSettingsButton" styleClass="dashboard-button"/>
                </HBox>
                <VBox alignment="CENTER" spacing="10" styleClass="status-box">
                    <Label text="System Status" styleClass="status-title"/>
                    <Label text="All systems operational" styleClass="status-text"/>
                </VBox>
            </VBox>
        </VBox>
    </center>
</BorderPane>