<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane prefWidth="1280" prefHeight="720"
            stylesheets="@../css/page-style.css, @../css/header-style.css"
            xmlns="http://javafx.com/javafx/8"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="ctgraphdep.controllers.UserTimeController">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <top>
        <HBox alignment="CENTER" spacing="20" styleClass="header">
            <HBox alignment="CENTER_LEFT" HBox.hgrow="ALWAYS">
                <ImageView fx:id="logoImage" fitWidth="150" fitHeight="70" preserveRatio="true"/>
                <Label text="My Work Hours and Time Off" styleClass="header-text"/>
            </HBox>
            <HBox alignment="CENTER_RIGHT">
                <Button fx:id="backButton" onAction="#onBackButton" text="Back to User Page" styleClass="header-button"/>
            </HBox>
        </HBox>
    </top>

    <center>
        <HBox spacing="20">
            <!-- Left side: Work Hours Table -->
            <VBox spacing="10" styleClass="table-section">
                <Label text="Work Hours Table" styleClass="section-title"/>
                <TableView fx:id="workHoursTable" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="workDateColumn" text="Date" />
                        <TableColumn fx:id="startTimeColumn" text="Start Time" />
                        <TableColumn fx:id="breaksColumn" text="Breaks" />
                        <TableColumn fx:id="breakTimeColumn" text="Break Time" />
                        <TableColumn fx:id="endTimeColumn" text="End" />
                        <TableColumn fx:id="totalTimeColumn" text="Total Time" />
                        <TableColumn fx:id="timeOffColumn" text="Time Off" />
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                    </columnResizePolicy>
                </TableView>
            </VBox>

            <!-- Right side: Additional Information -->
            <VBox spacing="20" styleClass="info-section" HBox.hgrow="ALWAYS">
                <!-- Time View Controls Section -->
                <VBox spacing="10" styleClass="control-section">
                    <Label text="Time View Controls" styleClass="section-title"/>
                    <HBox spacing="10" alignment="CENTER_LEFT">
                        <ComboBox fx:id="yearComboBox" promptText="Select Year"/>
                        <ComboBox fx:id="monthComboBox" promptText="Select Month"/>
                        <Button onAction="#onWorkTimeButton" text="View" styleClass="action-button"/>
                    </HBox>
                </VBox>

                <!-- Time Off Request Section -->
                <VBox spacing="10" styleClass="control-section">
                    <Label text="Request Time Off" styleClass="section-title"/>
                    <GridPane hgap="10" vgap="10">
                        <columnConstraints>
                            <ColumnConstraints hgrow="SOMETIMES" minWidth="100" prefWidth="120" />
                            <ColumnConstraints hgrow="SOMETIMES" minWidth="100" prefWidth="150" />
                        </columnConstraints>
                        <Label text="Start Date:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                        <DatePicker fx:id="startDatePicker" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
                        <Label text="End Date:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                        <DatePicker fx:id="endDatePicker" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                        <Label text="Type:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
                        <ComboBox fx:id="typeComboBox" promptText="Time Off Type" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
                    </GridPane>
                    <Button text="Submit Request" onAction="#onSubmitButtonClick" styleClass="action-button"/>
                </VBox>

                <!-- Additional Information or Summary Section -->
                <VBox spacing="10" styleClass="summary-section" VBox.vgrow="ALWAYS">
                    <Label text="Monthly Summary" styleClass="section-title"/>
                    <GridPane hgap="10" vgap="10">
                        <columnConstraints>
                            <ColumnConstraints hgrow="SOMETIMES" minWidth="100" prefWidth="150" />
                            <ColumnConstraints hgrow="SOMETIMES" minWidth="50" prefWidth="100" />
                        </columnConstraints>
                        <Label text="Total Hours Worked:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                        <Label fx:id="totalHoursWorkedLabel" text="0" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
                        <Label text="Overtime Hours:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                        <Label fx:id="overtimeHoursLabel" text="0" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                        <Label text="Time Off Taken:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
                        <Label fx:id="timeOffTakenLabel" text="0" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
                    </GridPane>
                </VBox>
            </VBox>
        </HBox>
    </center>
</BorderPane>