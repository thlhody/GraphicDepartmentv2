<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<StackPane xmlns="http://javafx.com/javafx/17.0.2-ea"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="ctgraphdep.controllers.UserTimeController"
           stylesheets="@../css/user-styles.css, @../css/header-styles.css, @../css/user-table-styles.css">
    <BorderPane>
        <top>
            <StackPane styleClass="header">
                <HBox styleClass="header-content" maxWidth="900"> <!-- Adjust maxWidth as needed -->
                    <padding>
                        <Insets top="20" right="30" bottom="20" left="30" />
                    </padding>
                    <ImageView fx:id="logoImage" styleClass="logo-image"/>
                    <Label text="My Work Hours and Time Off" styleClass="dashboard-title"/>
                    <Region HBox.hgrow="ALWAYS" />
                    <HBox styleClass="right-aligned-content">
                        <Button fx:id="backButton" onAction="#onBackButton" text="Back to User Page" styleClass="nav-button"/>
                    </HBox>
                </HBox>
            </StackPane>
        </top>
        <center>
            <ScrollPane fitToWidth="true" styleClass="main-content">
                <VBox spacing="30">
                    <padding>
                        <Insets top="30" right="30" bottom="30" left="30" />
                    </padding>

                    <!-- Time View Controls -->
                    <VBox spacing="15" styleClass="settings-section">
                        <Label styleClass="section-title" text="Time View Controls" />
                        <HBox spacing="15" alignment="CENTER_LEFT">
                            <ComboBox fx:id="yearComboBox" promptText="Select Year"/>
                            <ComboBox fx:id="monthComboBox" promptText="Select Month"/>
                            <Button onAction="#onWorkTimeButton" text="View Monthly Worked Hours" styleClass="action-button"/>
                        </HBox>
                    </VBox>

                    <!-- Time Off Request Section -->
                    <VBox spacing="15" styleClass="settings-section">
                        <Label styleClass="section-title" text="Request Time Off" />
                        <HBox spacing="15" alignment="CENTER_LEFT">
                            <DatePicker fx:id="startDatePicker" promptText="Start Date"/>
                            <DatePicker fx:id="endDatePicker" promptText="End Date"/>
                            <ComboBox fx:id="typeComboBox" promptText="Time Off Type"/>
                            <Button text="Submit Request" onAction="#onSubmitButtonClick" styleClass="action-button" />
                        </HBox>
                    </VBox>

                    <!-- Work Hours Table -->
                    <VBox spacing="15" styleClass="settings-section" VBox.vgrow="ALWAYS">
                        <Label styleClass="section-title" text="Work Hours Table" />
                        <TableView fx:id="workHoursTable" VBox.vgrow="ALWAYS">
                            <columns>
                                <TableColumn fx:id="workDateColumn" text="Date" />
                                <TableColumn fx:id="firstStartTimeColumn" text="Start Time" />
                                <TableColumn fx:id="breaksColumn" text="Breaks" />
                                <TableColumn fx:id="breaksTimeColumn" text="Break Time" />
                                <TableColumn fx:id="endTimeColumn" text="End Time" />
                                <TableColumn fx:id="totalWorkedTimeColumn" text="Total Time" />
                                <TableColumn fx:id="timeOffTypeColumn" text="Time Off" />
                            </columns>
                            <columnResizePolicy>
                                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                            </columnResizePolicy>
                        </TableView>
                    </VBox>
                </VBox>
            </ScrollPane>
        </center>
    </BorderPane>
</StackPane>