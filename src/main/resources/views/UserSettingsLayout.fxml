<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<StackPane xmlns="http://javafx.com/javafx/17.0.2-ea"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="ctgraphdep.controllers.UserSettingsController"
           stylesheets="@../css/user-styles.css, @../css/header-styles.css">
    <BorderPane>
        <top>
            <StackPane styleClass="header">
                <HBox styleClass="header-content" maxWidth="900"> <!-- Adjust maxWidth as needed -->
                    <padding>
                        <Insets top="20" right="30" bottom="20" left="30" />
                    </padding>
                    <ImageView fx:id="logoImage" styleClass="logo-image"/>
                    <Label text="User Settings" styleClass="dashboard-title"/>
                    <Region HBox.hgrow="ALWAYS" />
                    <HBox styleClass="right-aligned-content">
                        <Button fx:id="backButton" onAction="#onBackButton" text="Back to User Page" styleClass="nav-button"/>
                    </HBox>
                </HBox>
            </StackPane>
        </top>
        <center>
            <ScrollPane fitToWidth="true" styleClass="main-content">
                <VBox spacing="30">
                    <padding>
                        <Insets top="30" right="30" bottom="30" left="30" />
                    </padding>

                    <!-- Account Settings Section -->
                    <VBox spacing="15" styleClass="settings-section">
                        <Label styleClass="section-title" text="Account Settings" />
                        <GridPane vgap="10" hgap="10">
                            <columnConstraints>
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="100" prefWidth="150" />
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="200" prefWidth="250" />
                            </columnConstraints>
                            <Label text="Name:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                            <TextField fx:id="nameField" GridPane.columnIndex="1" GridPane.rowIndex="0" />

                            <Label text="Username:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                            <TextField fx:id="usernameField" GridPane.columnIndex="1" GridPane.rowIndex="1" editable="false" styleClass="non-editable-field" />

                            <Label text="Employee ID:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                            <TextField fx:id="employeeIdField" GridPane.columnIndex="1" GridPane.rowIndex="2" editable="false" styleClass="non-editable-field" />
                        </GridPane>
                        <Button fx:id="updateProfileButton" text="Update Profile" onAction="#onUpdateProfile" styleClass="action-button" />
                    </VBox>

                    <!-- Change Password Section -->
                    <VBox spacing="15" styleClass="settings-section">
                        <Label styleClass="section-title" text="Change Password" />
                        <GridPane vgap="10" hgap="10">
                            <columnConstraints>
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="100" prefWidth="150" />
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="200" prefWidth="250" />
                            </columnConstraints>
                            <Label text="Current Password:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                            <PasswordField fx:id="currentPasswordField" GridPane.columnIndex="1" GridPane.rowIndex="0" />

                            <Label text="New Password:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                            <PasswordField fx:id="newPasswordField" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                            <Label text="Confirm New Password:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                            <PasswordField fx:id="confirmPasswordField" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                        </GridPane>
                        <Button fx:id="changePasswordButton" text="Change Password" onAction="#onChangePassword" styleClass="action-button" />
                    </VBox>

                    <Label fx:id="statusLabel" styleClass="status-label"/>
                </VBox>
            </ScrollPane>
        </center>
    </BorderPane>
</StackPane>