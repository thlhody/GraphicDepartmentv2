<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="Infinity" prefWidth="Infinity"
            xmlns="http://javafx.com/javafx/17.0.2-ea"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="ctgraphdep.controllers.AdminTimeController"
            stylesheets="@../css/admin-styles.css, @../css/header-styles.css">
    <top>
        <HBox styleClass="header">
            <HBox styleClass="header-content" HBox.hgrow="ALWAYS">
                <padding>
                    <Insets top="20" right="30" bottom="20" left="30" />
                </padding>
                <ImageView fx:id="logoImage" styleClass="logo-image"/>
                <Label text="Monthly Time View" styleClass="dashboard-title"/>
                <Region HBox.hgrow="ALWAYS" />
                <HBox styleClass="right-aligned-content">
                    <Button fx:id="backButton" onAction="#onBackButton" text="Back to Admin Page" styleClass="nav-button"/>
                </HBox>
            </HBox>
        </HBox>
    </top>
    <center>
        <ScrollPane fitToWidth="true" styleClass="main-content">
            <VBox spacing="30">
                <padding>
                    <Insets top="30" right="30" bottom="30" left="30" />
                </padding>

                <!-- Time View Controls -->
                <VBox spacing="15" styleClass="settings-section">
                    <Label styleClass="section-title" text="Time View Controls" />
                    <HBox spacing="15" alignment="CENTER_LEFT">
                        <ComboBox fx:id="yearComboBox" promptText="Select Year"/>
                        <ComboBox fx:id="monthComboBox" promptText="Select Month"/>
                        <Button onAction="#onWorkTimeButton" text="View Monthly Worked Hours" styleClass="primary-button"/>
                        <Region HBox.hgrow="ALWAYS" />
                        <Button fx:id="exportToExcelButton" onAction="#onExportToExcelButton" text="Export to Excel" styleClass="action-button" />
                    </HBox>
                </VBox>

                <!-- National Holiday Section -->
                <VBox spacing="15" styleClass="settings-section">
                    <Label styleClass="section-title" text="Add National Holiday" />
                    <HBox spacing="15" alignment="CENTER_LEFT">
                        <DatePicker fx:id="holidayDatePicker"/>
                        <Button onAction="#onAddNationalHoliday" text="Add National Holiday" styleClass="primary-button" />
                    </HBox>
                </VBox>

                <!-- Selected User Info -->
                <VBox spacing="15" styleClass="settings-section">
                    <Label styleClass="section-title" text="Selected User Information" />
                    <Label fx:id="selectedUserLabel" styleClass="selected-user-info" wrapText="true" maxWidth="Infinity"/>
                </VBox>

                <!-- Work Time Table -->
                <VBox spacing="15" styleClass="settings-section" VBox.vgrow="ALWAYS">
                    <Label styleClass="section-title" text="Work Time Table" />
                    <TableView fx:id="workTimeTableView" VBox.vgrow="ALWAYS"/>
                </VBox>
            </VBox>
        </ScrollPane>
    </center>
</BorderPane>