<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.ImageView?>

<VBox prefWidth="Infinity" prefHeight="Infinity"
      xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="ctgraphdep.controllers.StatusDialogController"
      stylesheets="@../css/status-dialog.css"
      styleClass="main-container">
    <HBox styleClass="header">
        <Label text="User Status" styleClass="dialog-header"/>
        <Region HBox.hgrow="ALWAYS" />
        <Button fx:id="okButton" text="OK" onAction="#closeDialog" styleClass="ok-button"/>
        <Button fx:id="refreshButton" styleClass="refresh-button">
            <graphic>
                <ImageView fx:id="refreshIcon" fitHeight="16" fitWidth="16" preserveRatio="true" smooth="true"/>
            </graphic>
        </Button>
    </HBox>
    <ScrollPane fitToWidth="true" styleClass="scroll-pane">
        <VBox fx:id="userStatusBox" VBox.vgrow="ALWAYS" styleClass="user-status-container" />
    </ScrollPane>
</VBox>